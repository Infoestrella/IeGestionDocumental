<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns overwrite="true">
        <column name="code" order="100">
            <widget type="text" fieldname="idfile" onclick="EditAttachedFile"/>
        </column>
        <column name="file-name" order="110">
            <widget type="text" fieldname="filename"/>
        </column>
        <column name="category" numcolumns="3" order="120">
            <widget type="autocomplete" fieldname="idfilecategory">
                <values source="filecategories" fieldcode="id" fieldtitle="name"/>
            </widget>
        </column>
        <column name="description" numcolumns="9" order="130">
            <widget type="text" fieldname="description"/>
        </column>
        <column name="folder" numcolumns="9" order="140">
            <widget type="text" fieldname="folder"/>
        </column>
        <column name="size" display="right" order="150">
            <widget type="bytes" fieldname="size" decimal="0"/>
        </column>
        <column name="date" display="right" order="160">
            <widget type="date" fieldname="date"/>
        </column>
    </columns>
</view>